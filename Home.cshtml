@model yk.Models.User_details

@{
    ViewBag.Title = "Home";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <title></title>
  

</head>



<body>
    <div class="content">


        <div class="test">


            <div class="container">

                <img src="~/mcet.png" style="width:400px;height:200px" />
                <div class="topleft"></div>
            </div>
            <div class="navig" style="float:left">
                <div>
                    <h1 class="boxed" style="width:700px;font-size:30px;color:orangered;padding-top:10px;padding-bottom:10px;padding-left:45px">PRODUCT BASED LEARNING WEB PORTAL</h1>
                </div>

            </div>
            <img src="~/npt1.jpg" style=" width:200px;height:220px;float:right;padding-right:60px;padding-top:35px">



            <div style="padding-left:29px;padding-right:700px;padding-top:250px">
                <div class="boxed" style="padding-bottom:20px;padding-top:10px;float:left;width:800px">

                    <h2 style="font-style:unset">
                        <b><u><font color="Red"> Product  Based Learning (PBL)</font></u></b>
                    </h2>

                    <p style="font-size:25px">
                        <font color="black">
                            <b>
                                One Core idea behind Product Based Learning is “Profound interconnectedness” – it aims at cultivating the awareness of interdependency at multiple levels of our curriculum that would lead us to the transformation from teacher centric to learner centric approach.
                            </b>
                        </font>
                    </p>

                </div>
            </div>
            <div style="padding-right:220px;padding-top:30px;">
                <div class="boxed" style="padding-bottom:60px;padding-top:50px;float:right;padding-left:20px;padding-right:20px">

                    <h2 style="font-style:unset">
                        <b><u><font color="Red">Programme</font></u></b>
                    </h2>
                    <p style="font-size:25px">
                        <button style="width:300px" class="ui orange button" id="d1">B.E.Mechanical</button><br />
                        <button style="width:300px" class="ui orange button" id="d2">B.E.Electrical and Electronics</button><br />
                        <button style="width:300px" class="ui orange button" id="d3">Diploma-Mechanical</button><br />
                        <button style="width:300px" class="ui orange button" id="d4">Diploma-Electrical and Electronics</button><br />
                        <button style="width:300px" class="ui orange button" id="d5">Professional Skills</button><br />


                    </p>
                </div>

            </div>

            <br />
            <div style="padding-left:29px;padding-top:220px">
                <div class="boxed" style="padding-bottom:30px;padding-top:20px;width:800px">

                    <h2 style="font-style:unset">
                        <b><u><font color="Red"> Objective of PBL</font></u></b>
                    </h2>

                    <p style="font-size:25px">
                        <font color="black">
                            <b>
                                Measure interim attainment of Product Outcomes using Product Based Learning loop outcomes.
                            </b>
                        </font>
                    </p>

                </div>
            </div>

        </div>
        <div>
            <div class="ui tiny modal" id="passChange">
                <i class="close icon"></i>
                <br />
                <div class="content">
                    <h4 class="ui red header container">
                        Login
                    </h4>
                    <div class="ui form container">
                        @using (Html.BeginForm("Login", "Home"))
                        {
                            <table class="ui center aligned  selectable celled orange table ">
                                <tbody>
                                    <tr>
                                        <td class="ui field"><label>User ID</label></td>
                                        <td>@Html.TextBoxFor(L => L.UserID, new { @Type = "text", @Required = "required" })</td>
                                    </tr>
                                    <tr>
                                        <td class="ui field"><label>Password</label></td>
                                        <td>@Html.TextBoxFor(L => L.Password, new { @Type = "password", @Required = "required" })</td>
                                    </tr>
                                    <tr>
                                        <td colspan="2">
                                            <button class="ui orange button">Login</button>
                                            <button class="ui orange button" id="rr">Register</button>
                                        </td>

                                    </tr>

                                </tbody>
                            </table>
                        }
                    </div>
                </div>
            </div>
        </div>
        <div>
            <div class="ui tiny modal" id="reg">
                <i class="close icon"></i>
                <br />
                <div class="content">
                    <h4 class="ui red header container">
                        Register
                    </h4>
                    <div class="ui form container">
                        @using (Html.BeginForm("Login", "Home"))
                        {
                        <table class="ui center aligned  selectable celled orange table ">
                            <tbody>
                                <tr>
                                    <td class="ui field"><label>User ID</label></td>
                                    <td>@Html.TextBoxFor(L => L.UserID, new { @Type = "text", @Required = "required" })</td>
                                </tr>
                                
                                <tr>
                                    <td class="ui field"><label>Password</label></td>
                                    <td>@Html.TextBoxFor(L => L.Password, new { @Type = "password", @Required = "required" })</td></tr>
                                 <tr>   <td class="ui field"><label>Confirm Password</label></td>
                                    <td>@Html.TextBoxFor(L => L.Password, new { @Type = "password", @Required = "required" })</td>
                                </tr>
                            <tr>
                             <td class="ui field"><label>Department</label></td>
                            <td>@Html.TextBoxFor(L => L.Password, new { @Type = "password", @Required = "required" })</td>
                            </tr>
                                <tr>

                                </tr>
                               <tr>
                                   <td colspan="2">

                                    <button class="ui orange button">Register</button>
                                </td>

                            </tr>

                            </tbody>
                        </table>
                        }
                    </div>
                </div>
            </div>
        </div>
    </div>

    <div class="preload">
        <img src="http://i.imgur.com/KUJoe.gif">
    </div>

    <style>
            .preload { width:100px;
    height: 100px;
    position: fixed;
    top: 40%;
    left: 47%;}

    .content {display:none;}

    </style>

    <script>

        $("#d1").click(function () {

            $('#passChange').modal('show');

        });
         $("#rr").click(function () {

            $('#reg').modal('show');

        });


        $("#d2").click(function () {

            $('#passChange').modal('show');

        });


        $("#d3").click(function () {

            $('#passChange').modal('show');

        });


        $("#d4").click(function () {

            $('#passChange').modal('show');

        });
        $("#d5").click(function () {

            $('#passChange').modal('show');

        });

        $(function () {
        $(".preload").fadeOut(500, function () {
            $(".content").fadeIn(500);
        });
    });

    </script>









</body>
</html>

